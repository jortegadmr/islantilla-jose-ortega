{% extends 'base.html.twig' %}

{% block title %}Habitacion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="titulo text-center mt-4">Habitacion</h1>

        <table class="table table-striped mt-4">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ habitacion.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ habitacion.Nombre }}</td>
                </tr>
                <tr>
                    <th>Numero</th>
                    <td>{{ habitacion.Numero }}</td>
                </tr>
                <tr>
                    <th>Capacidad</th>
                    <td>{{ habitacion.Capacidad }}</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>
                            {% if habitacion.Usuario is not null %}
                                {{ habitacion.Usuario.nombre }}
                            {% else %}
                                -
                            {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>


        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="{{ path('app_habitacion_index') }}" class="btn boton-mostrar">Volver a la lista</a>

                <a href="{{ path('app_habitacion_edit', {'id': habitacion.id}) }}" class="btn boton-editar">Editar</a>

        </div>

            <div>
                {{ include('habitacion/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
