{% extends 'base.html.twig' %}

{% block title %}Habitaciones{% endblock %}

{% block body %}
    <h1>Habitaciones</h1>

    <table class="table">
        <thead>
            <tr>
                <!-- <th>Id</th> NO QUEREMOS QUE APAREZCA EL ID -->
                <th>Nombre</th>
                <th>Numero</th>
                <th>Ocupantes</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for habitacion in habitacions %}
            <tr>
                <!-- <td>{{ habitacion.id }}</td> NO QUEREMOS QUE APAREZCA EL ID -->
                <td>{{ habitacion.Nombre }}</td>
                <td>{{ habitacion.Numero }}</td>
                <td>{{ habitacion.Capacidad }}</td>
                <td>
                    <a href="{{ path('app_habitacion_show', {'id': habitacion.id}) }}">Mostrar</a>
                    <a href="{{ path('app_habitacion_edit', {'id': habitacion.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_habitacion_new') }}">Nueva Habitaci√≥n</a>
{% endblock %}
