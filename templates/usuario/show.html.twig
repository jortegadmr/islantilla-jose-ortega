{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="titulo text-center mt-4">Usuario</h1>

        <table class="table table-striped mt-4">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ usuario.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ usuario.Email }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ usuario.Nombre }}</td>
                </tr>
                <tr>
                    <th>Apellidos</th>
                    <td>{{ usuario.Apellidos }}</td>
                </tr>
                <tr>
                    <th>Fecha Nacimiento</th>
                    <td>{{ usuario.Fecha ? usuario.Fecha|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Pais</th>
                    <td>{{ usuario.Pais }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="{{ path('app_usuario_index') }}" class="btn boton-mostrar">Volver a la lista</a>
                <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}" class="btn boton-editar">Editar</a>
            </div>

            <div>
                {{ include('usuario/_delete_form.html.twig') }}
            </div>
        </div>

    </div>
{% endblock %}
