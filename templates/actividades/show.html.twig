{% extends 'base.html.twig' %}

{% block title %}Actividades{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="titulo text-center mt-4">Actividades</h1>

        <table class="table table-striped mt-4">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ actividade.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ actividade.Nombre }}</td>
                </tr>
                <tr>
                    <th>Categoria</th>
                    <td>{{ actividade.Categoria }}</td>
                </tr>
                <tr>
                    <th>Fecha Inicio</th>
                    <td>{{ actividade.FechaInicio ? actividade.FechaInicio|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Fecha Fin</th>
                    <td>{{ actividade.FechaFin ? actividade.FechaFin|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="{{ path('app_actividades_index') }}" class="btn boton-mostrar">Volver a la lista</a>

                <a href="{{ path('app_actividades_edit', {'id': actividade.id}) }}" class="btn boton-editar">Editar</a>

            </div>

            <div>
                {{ include('actividades/_delete_form.html.twig') }}
            </div>
        </div>

       
    </div>
{% endblock %}
